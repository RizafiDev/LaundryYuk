<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transaksi.InvoiceActivity"
    android:background="#f9fafb">


    <!--informasi pelanggan-->
    <androidx.cardview.widget.CardView
        android:id="@+id/containerInvoice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingVertical="42dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="14dp"
                    android:src="@drawable/circle_check_solid"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/id_transaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TRX202506021"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="14sp"
                    android:textAlignment="center"
                     />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transaksi_berhasil"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                     />
                <TextView
                    android:id="@+id/tv_tanggal_transaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="02 Juni 2025 â€¢ 15.22 WIB"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="#4b5563"
                    android:layout_marginTop="4dp"
                     />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!--informasi layanan-->
    <androidx.cardview.widget.CardView
        android:id="@+id/containerInformasi"
        app:layout_constraintTop_toBottomOf="@id/containerInvoice"
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_transaksi"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginVertical="12dp"
                android:background="#d1d5db"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/card_pelanggan_nama"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_nama_pelanggan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Firmansyah"
                    android:textAlignment="textEnd"
                    android:textColor="#4b5563"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginVertical="12dp"
                android:background="#d1d5db"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/card_pelanggan_nohp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/nohpPelanggan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="085865719683"
                    android:textAlignment="textEnd"
                    android:textColor="#4b5563"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginVertical="12dp"
                android:background="#d1d5db"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/nama_pegawai"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_nama_pegawai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Narendra"
                    android:textAlignment="textEnd"
                    android:textColor="#4b5563"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <!--informasi harga-->
    <androidx.cardview.widget.CardView
        android:id="@+id/containerHarga"
        app:layout_constraintTop_toBottomOf="@id/containerInformasi"
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_harga"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="16sp"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginVertical="12dp"
                android:background="#d1d5db"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/layanan"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_harga_layanan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp. 6.000"
                    android:textAlignment="textEnd"
                    android:textColor="#4b5563"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tambahan"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_harga_tambahan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp. 2.000"
                    android:textAlignment="textEnd"
                    android:textColor="#4b5563"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pajak"
                    android:textColor="#4b5563"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_pajak"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp. 720"
                    android:textAlignment="textEnd"
                    android:textColor="#4b5563"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/total_pembayaran"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_total_pembayaran"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp. 6.720"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginVertical="12dp"
                android:background="#d1d5db"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/metode_pembayaran"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_metode_pembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BANK BRI"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/containerCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardElevation="1dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="2"
                >
                <TextView
                    android:id="@+id/btn_kirimwa"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#4338ca"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="WhatsApp"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="16sp"
                    android:padding="14dp"
                    android:background="@drawable/button_background_outlined"
                    android:layout_marginRight="4dp"
                    />
                <TextView
                    android:id="@+id/btn_cetak"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cetak"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="16sp"
                    android:padding="14dp"
                    android:background="@drawable/button_background"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>