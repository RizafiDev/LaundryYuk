<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pelanggan.DataPelangganActivity"
    android:background="#f9fafb">

    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardElevation="1dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Pelanggan"
            android:fontFamily="@font/inter_bold"
            android:textSize="18sp"
            android:padding="20dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/searchCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/magnifying_glass_solid"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Search Icon"
                app:tint="#4338ca"/>

            <EditText
                android:id="@+id/etSearchPelanggan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Cari nama pelanggan..."
                android:textSize="16sp"
                android:fontFamily="@font/inter_medium"
                android:textColorHint="#9CA3AF"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:maxLines="1" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDATA_PELANGGAN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/card_data_pelanggan"
        app:layout_constraintTop_toBottomOf="@id/searchCardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="12dp"
        android:paddingBottom="140dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPilihPelanggan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pen_solid"
        app:tint="#4338ca"
        app:layout_constraintBottom_toTopOf="@id/fab_DATA_PELANGGAN_TAMBAH"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/white"
        android:contentDescription="Edit Pelanggan" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_DATA_PELANGGAN_TAMBAH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_plus_solid"
        app:tint="#4338ca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/white"
        android:contentDescription="Tambah Pelanggan" />

</androidx.constraintlayout.widget.ConstraintLayout>