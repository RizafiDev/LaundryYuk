<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f9fafb">

    <!-- Background Ilustrasi -->
    <ImageView
        android:id="@+id/illustrationImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header"
        android:contentDescription="Main Illustration" />

    <!-- Header yang mengambang di atas ilustrasi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvWaktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat Pagi"
            android:fontFamily="@font/inter_medium"
            android:textSize="14sp"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tvNamaUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIRMANSYAH RIZA AFIFUDIN"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <!-- Card Prioritas yang Melayang -->
    <androidx.cardview.widget.CardView
        android:id="@+id/menu_prioritas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/wallet_solid"
                            app:tint="@color/primary_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pendapatan Bulanan"
                            android:textSize="16sp"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/inter_bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp">
                        <TextView
                            android:id="@+id/saldo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp. 1.500.000"
                            android:fontFamily="@font/inter_bold"
                            android:textSize="16dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/AppDataLaporan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="24dp"
                    >
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/chart_simple_solid"
                        app:tint="@color/primary_color"
                        android:layout_gravity="center"
                        android:paddingTop="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laporan"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_semibold"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
            <!-- Header -->


            <!-- Icon Grid -->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Main Content Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="120dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingTop="100dp"
            android:paddingBottom="40dp">

            <!--quotes-->
            <TextView
                android:id="@+id/Quotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:layout_marginTop="24dp"
                android:textSize="18sp"
                android:text="Siap melayani dengan setulus hati"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="16dp"/>

            <TextView
                android:id="@+id/SubQuotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:textSize="16sp"
                android:text="Jangan kecewakan pelanggan"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Quotes"
                android:layout_marginHorizontal="16dp"/>

            <!--    feature card-->
            <GridLayout
                android:id="@+id/feature_card"
                app:layout_constraintTop_toBottomOf="@id/SubQuotes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:layout_marginTop="8dp"
                android:columnCount="3"
                android:layout_marginBottom="24dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_margin="10dp"
                    android:padding="40dp">
                    <LinearLayout
                        android:id="@+id/AppDataLayanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/mesincuci"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="Layanan"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_margin="10dp"
                    android:padding="40dp">
                    <LinearLayout
                        android:id="@+id/AppDataPelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/pelanggan"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="Pelanggan"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--        baris kedua-->
                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_margin="10dp"
                    android:padding="40dp">
                    <LinearLayout
                        android:id="@+id/AppDataPegawai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/pegawai"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="Pegawai"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_margin="10dp"
                    android:padding="40dp">
                    <LinearLayout
                        android:id="@+id/AppDataCabang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/cabang"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="Cabang"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_margin="10dp"
                    android:padding="40dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/printer"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="Printer"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:padding="14dp">

            <!-- Beranda -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/house_solid"
                    android:layout_marginTop="1dp"
                    app:tint="@color/primary_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beranda"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Space untuk FAB (tengah) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <!-- Space kosong untuk FAB -->
            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/AppDataAkun">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/user_solid"
                    android:layout_marginTop="1dp"
                    app:tint="#9D9D9D"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#9D9D9D"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Floating Action Button - Diletakkan di akhir untuk z-index tertinggi -->
    <LinearLayout
        android:id="@+id/fabContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="9dp">

        <!-- FAB Circle -->
        <androidx.cardview.widget.CardView
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:cardCornerRadius="28dp"
            android:backgroundTint="@color/primary_color">

            <LinearLayout
                android:id="@+id/AppDataTransaksi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/plus_solid"
                    app:tint="@color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Text Label di bawah lingkaran -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Transaksi"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/primary_color"
            android:layout_marginTop="8dp"
            android:textSize="12sp"/>

    </LinearLayout>

</FrameLayout>